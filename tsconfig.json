{
  "extends": "astro/tsconfigs/strict",
  //alias para las rutas con esto evitamso el ../../.. en las rutas
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*":[
        "src/*"
      ],
      "~/components":[
        "src/components"
      ],
      "~/icons":[
        "src/icons"
      ],
      "~/lib":[
        "src/lib/*"
      ]
    }
  }
}